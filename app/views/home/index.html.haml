= render :partial => "layouts/nav" 
%div.container
  %div.center-block
    %div.col-md-12.text-center
      -if user_signed_in?
        %ul{:style => "list-style-type: none;"}
          %li{:style => "font-size: 30px"} You have <span class="btn btn-default" style="font-size:60px; font-weight: bold;">#{current_user.todos.count}</span> ToDo to DO

%div.container
  %div.center-block
- if user_signed_in?
  %div.unfinsihedTodos.col-md-6.text-center
    %h4= current_user.username || current_user.email
    - current_user.todos.each do |todo|
      %div.panel.panel-info
        %div.panel-heading
          %h3.panel-title= todo.title
          %div.panel-body
            = todo.body
  %div.finishedTodos.col-md-6.text-center
    %h4= current_user.username || current_user.email
    - current_user.todos.each do |todo|
      %div.panel.panel-success
        %div.panel-heading
          %h3.panel-title= todo.title
          %div.panel-body
            = todo.body
  %div.container
    %div.center-block
    - @users.each do |user|
      %%div.allUserTodos.col-md-12.text-center
        %h4= user.username || user.email
        - user.todos.each do |todo|
          %div.panel.panel-info
            %div.panel-heading
              %h3.panel-title= todo.title
              %div.panel-body
                = todo.body
- else
  %div.container
    %div.center-block
    - @users.each do |user|
      %div.allUserTodos.col-md-6.text-center
        %h4= user.username || user.email
        - user.todos.each do |todo|
          %div.panel.panel-info
            %div.panel-heading
              %h3.panel-title= todo.title
              %div.panel-body
                = todo.body